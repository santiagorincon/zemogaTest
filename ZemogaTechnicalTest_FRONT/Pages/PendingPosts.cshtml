@page
@using ZemogaTechnicalTest_FRONT.DTO;
@model ZemogaTechnicalTest_FRONT.Pages.PendingPostsModel
@{
    ViewData["Title"] = "PendingPosts";
}
<br />
<div class="container-lg">
    <div class="table-responsive" style="overflow-x: hidden">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Publication <b>Management</b></h2></div>
                    <div class="col-sm-4">
                        <form method="post">
                            <button asp-page-handler="viewPosts" class="btn btn-info add-new">View published posts</button>
                        </form>
                    </div>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Author</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Submit Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (PostDTO post in Model.pendingPosts)
                        {
                            <tr>
                                <td>@post.AuthorName</td>
                                <td>@post.PostName</td>
                                <td>@post.PostContent</td>
                                <td>@post.SubmitDate</td>
                                <td>
                                    <form method="post">
                                        <button asp-page-handler="approve" style="border: 0px;" class="button_pro" title="Approve" data-toggle="tooltip"><i class="material-icons">done</i></button>

                                        <button asp-page-handler="reject" style="border: 0px;" class="button_pro" title="Reject" data-toggle="tooltip"><i class="material-icons">block</i></button>

                                        <button asp-page-handler="delete" style="border: 0px;" class="button_pro" title="Delete" data-toggle="tooltip"><i class="material-icons">delete</i></button>
                                        <input type="hidden" name="id" id="id" value="@post.ID" />
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


